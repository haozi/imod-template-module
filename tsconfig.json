{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "allowUnreachableCode": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "createElement",
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist/",
    "strict": true,
    "strictNullChecks": true,
    "target": "es5",
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}